<div class="custom-control custom-checkbox w-100 mb-1 mb-sm-0">
    <input type="checkbox" class="custom-control-input" id="rememberCheck1" @bind="@Checked">
    <label class="custom-control-label" for="rememberCheck1">@Text</label>
</div>

@code {
    [Parameter] public string Text { get; set; }
    bool check;
    [Parameter] public bool Checked { get => check; set => check = value; }

    [Parameter]
    public EventCallback<bool> CheckedChanged { get; set; }
}
