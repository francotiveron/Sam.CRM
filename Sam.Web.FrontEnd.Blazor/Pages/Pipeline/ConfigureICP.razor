                            </EntryRow>

                            <EntryRow>
                                <CheckBox Text="Instragram Follwoers"/>
                                <SecondlevelDropDown Minvalue="Min" Maxvalue="Max" />
                            </EntryRow>
                        </div>
                    </div>

                    <div class="col-md-12 col-lg-6 mb-4">
                        <div class="sam-input-group p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <div class="configTitle">
                                    <h4>Financial</h4>
                                </div>
                                <Button Text="Add Item" />
                            </div>

                            <EntryRow>
                                <CheckBox Text="Market Cap" />
                                <SecondlevelDropDown Minvalue="Min" Maxvalue="Max" />
                            </EntryRow>

                            <EntryRow>
                                <CheckBox Text="Revenue"/>
                                <SecondlevelDropDown Minvalue="Min" Maxvalue="Max"/>
                            </EntryRow>

                            <EntryRow>
                                <CheckBox Text="Employees"/>
                                <SecondlevelDropDown Minvalue="Min" Maxvalue="Max"/>
                            </EntryRow>

                            <EntryRow>
                                <CheckBox Text="Financial Year"/>
                                <DropDown Text="Select"/>
                            </EntryRow>

                            <EntryRow>
                                <CheckBox Text="Stock Price"/>
                                <DropDown Text="Select"/>
                            </EntryRow>

                            <EntryRow>
                                <CheckBox Text="Credit Rating"/>
                                <DropDown Text="Select"/>
                            </EntryRow>
                        </div>
                    </div>

                    <div class="col-md-12 col-lg-6 mb-4">
                        <div class="sam-input-group p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <div class="configTitle">
                                    <h4>Technology</h4>
                                </div>
                                <Button Text="Add Item" />
                            </div>

                            <EntryRow>
                                <CheckBox Text="ERP" />
                                <DropDown Text="Select"/>
                            </EntryRow>

                            <EntryRow>
                                <CheckBox Text="CRM" />
                                <DropDown Text="Select"/>
                            </EntryRow>

                            <EntryRow>
                                <CheckBox Text="Financial" />
                                <DropDown Text="Select"/>
                            </EntryRow>

                            <EntryRow>
                                <CheckBox Text="Distribution/WH" />
                                <DropDown Text="Select"/>
                            </EntryRow>

                            <EntryRow>
                                <CheckBox Text="Help Desk" />
                                <DropDown Text="Select"/>
                            </EntryRow>

                            <EntryRow>
                                <CheckBox Text="Database" />
                                <DropDown Text="Select"/>
                            </EntryRow>
                        </div>
                    </div>

                </div>
            </div>
        </div>   

