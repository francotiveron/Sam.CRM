                                        <td><span class=" bg-danger" style="border-radius: .25rem;padding: .25em .4em;color: white;">Declined</span></td>
                                    </tr>
                                    <tr>
                                        <td style="width:160px; align=center;">
                                            <span class="tableuserimg">
                                                <img src="images/userimg5.png" alt="">
                                            </span>
                                        </td>
                                        <td>Katie Perry</td>
                                        <td>Presales Consultant</td>
                                        <td>SAM</td>
                                        <td></td>
                                        <td><span class=" badge-primary" style="border-radius: .25rem;padding: .25em .4em;color: white;">Pending</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    IEnumerable<Allot> Allots => SamData.Allots;
    IEnumerable<Company> Companies => SamData.Companies;

    protected override async Task OnInitializedAsync()
    {
        await SamData.InitializeAsync();
    }


    class Model
    {
        //Allot Data
        public string AllotId { get; set; }

        //Company Data
        public string CompanyId { get; set; }
    }

    Model model = new Model();

}
